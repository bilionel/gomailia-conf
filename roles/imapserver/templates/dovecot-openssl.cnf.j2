#
# SSLeay configuration file for Dovecot.
#

RANDFILE                = /dev/urandom

[ req ]
default_bits            = 2048
default_keyfile         = privkey.pem
distinguished_name      = req_distinguished_name
prompt                  = no
policy                  = policy_anything
req_extensions          = v3_req
x509_extensions         = v3_req

[ req_distinguished_name ]
organizationName = {{ organization_name }} gomailia
organizationalUnitName = {{ organization_unit_name }} mailservice
commonName = {{ common_name }} imappop3.gomail.life
emailAddress = {{ admin_email_adress }} blionnel15@gmail.com

[ v3_req ]
basicConstraints        = CA:FALSE
