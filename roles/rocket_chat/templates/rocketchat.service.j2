[Unit]
Description=The Rocket.Chat server
After=network.target remote-fs.target nss-lookup.target nginx.service mongod.service
[Service]
ExecStart={{ node_bin_path }} {{ rocket_chat_target_folder }}/main.js
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier={{ rocket_chat_system_user }}
User={{ rocket_chat_system_user }}
Environment=MONGO_URL=mongodb://localhost:27017/rocketchat?replicaSet=rs01 MONGO_OPLOG_URL=mongodb://localhost:27017/local?replicaSet=rs01 ROOT_URL=https://{{ chat_domain_site }} PORT=3000 HTTP_FORWARDED_COUNT=1
[Install]
WantedBy=multi-user.target